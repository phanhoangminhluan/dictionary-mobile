<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Word"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ukPhonetic"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/pronuciation/"
                        android:textColor="#440000"
                        android:textSize="22dp" />
                    <ToggleButton
                        android:id="@+id/toogleLove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_marginLeft="30dp"
                        android:textOff="Dislove"
                        android:textOn="Love" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/partOfSpeech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADJECTIVE "
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@android:color/holo_orange_light"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/definition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="of uncertain, idefinite, or unclear character or meaning: "
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- EXAMPLES"
                        android:textSize="22dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/example"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="thinking or communcating in an unfocused or imprecise way:"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- DERIVATIVES"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/synonyms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vaguish"
                            android:textColor="@android:color/holo_blue_bright"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/partOfSpeech2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADJECTIVE"
                            android:textAllCaps="true"
                            android:padding="5dp"
                            android:textColor="@android:color/holo_orange_light"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/derivations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="derivation"
                        android:textColor="@android:color/holo_blue_bright"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORIGIN "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>