<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_margin="16dp"
    android:background="#ffffff"
    android:padding="10dp"
    android:id="@+id/termDefinitionFDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTerm"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#808080"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Term"/>
        <TextView
            android:id="@+id/txtDefinition"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definition"/>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgUpdateFlashcard"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:minHeight="30dp"
                android:src="@drawable/ic_mode_edit_black_24dp" />
            <ImageView
                android:id="@+id/imgDeleteFlashcard"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:minHeight="30dp"
                android:src="@drawable/ic_delete_forever_black_24dp" />

        </LinearLayout>



    </LinearLayout>



</LinearLayout>