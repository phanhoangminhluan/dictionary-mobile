<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".FlashcardTermActivity">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="350dp"
        android:layout_height="470dp"
        android:background="#ffff"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgCloseLearnFlashcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:layout_marginRight="300dp"
            android:src="@drawable/ic_close"/>

        <TextView
            android:id="@+id/txtTerm"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:text="Day la Learn Term"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txtDefinition"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text=" Learn Term"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStudyAgain"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:background="#008080"
            android:text="Study again"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="15dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnGotIt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:background="#008080"
            android:text="Got it"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="15dp"
            android:textStyle="normal" />
    </LinearLayout>


</LinearLayout>